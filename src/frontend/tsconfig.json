{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/store/*": ["store/*"],
      "@/hooks/*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@/data/*": ["data/*"],
      "@/facade/*": ["facade/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["src", "vite.config.ts", "tailwind.config.ts"],
  "exclude": ["dist", "node_modules"]
}
