{
  "name": "@weebbreed/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsup src/index.ts --format esm --sourcemap --clean --tsconfig tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "fmt": "pnpm exec prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "bench": "tsx src/bench.ts"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chokidar": "^3.5.3",
    "glob": "^11.0.0",
    "pino": "^9.11.0",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "tsx": "^4.20.5"
  }
}
