{
  "name": "weebbreed-reboot",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "scripts": {
    "dev": "pnpm -r --parallel --filter @weebbreed/backend --filter @weebbreed/frontend dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "fmt": "pnpm exec prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md,css,scss}' 'scripts/**/*.{ts,tsx,js,jsx,json,md}' 'tools/**/*.{ts,tsx,js,jsx,json,md}' '*.{json,md,cjs}'",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "check": "pnpm lint && pnpm exec prettier --check 'src/**/*.{ts,tsx,js,jsx,json,md,css,scss}' 'scripts/**/*.{ts,tsx,js,jsx,json,md}' 'tools/**/*.{ts,tsx,js,jsx,json,md}' '*.{json,md,cjs}' && pnpm test && pnpm typecheck && pnpm validate:data",
    "bench": "pnpm --filter @weebbreed/backend bench",
    "audit:run": "pnpm exec tsx --tsconfig src/backend/tsconfig.build.json scripts/run_audit.ts",
    "validate:data": "tsx tools/validate-data.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "seedrandom": "^3.0.5",
    "commander": "^12.1.0",
    "pino": "^9.11.0",
    "ajv": "^8.17.1",
    "chokidar": "^3.5.3",
    "glob": "^11.0.0",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  }
}
